/* pages/detail/detail.wxss */
.mian{
    padding: 10rpx;
    color: #666;
}
.video_info{
    margin-top: 10rpx;
}
.video_info video{
    width: 100%;
}
.video_title{
    display: flex;
    justify-content: space-between;
    font-size: 35rpx;
}
.video_detail{
    margin-top: 10rpx;
    font-size: 25rpx;
}
.video_detail text{
    margin-left: 8rpx;
}
.video_detail .author{

}


/* 推荐视频 */
.other_list{
    margin-top: 10rpx;
}
.item_other{
    display: flex;
    justify-content: space-between;
    margin-top: 15rpx;
}
.other_img{
    width: 38%;
    display: flex;
    justify-content: center;
    align-items: center;
}
.other_img image{
    width: 90%;
    border-radius: 20rpx;
}
.other_info{
    width: 60%;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
}
.other_item{
    font-size: 28rpx;
    color: #e06f93;
}
.other_detail{
    font-size: 26rpx;
    color: #666;
}

/* 评论列表 */
.commetn_wrap{
    margin-top: 10rpx;
}
.comment title{
    padding: 10rpx;
    font-size: 28rpx;
}
.comment_list{

}
.comment_item{
    margin-bottom: 10rpx;
    padding: 10rpx;
    display: flex;
    justify-content: space-between;
    border-bottom: 1px solid #666;
}
.comment_user{
    display: flex;
    flex: 1;
    justify-content: center;
    align-items: center;
}
.comment_user image{
    width: 60%;
    border-radius: 50%;
}
.comment_info{
    flex: 5;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}
.comment_detail{
    display: flex;
    justify-content: space-between;
}
.comment_detail .author{
    font-size: 22rpx;
    color: #000;
    margin-bottom: 6rpx;
}
.comment_detail .date{
    font-size: 20rpx;
    color: #666;
}
.comment_conent{
    font-size: 22rpx;
    color: #666;
}